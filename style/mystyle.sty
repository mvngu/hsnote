%% Custom environments
%%
%% Pack together the items of an enumeration.  Remove extraneous
%% vertical spacing between items.  Use lower-case alphabetic
%% characters for enumeration.
\newenvironment{packedenum}{
\setlength{\parskip}{-5pt}
\begin{enumerate}[(a)]
  \setlength{\itemsep}{0pt}
  \setlength{\parskip}{2pt}
  \setlength{\parsep}{0pt}
}{
  \end{enumerate}
  \vspace{-6pt}
}
%%
%%
%% Enumeration via numerals.
\newenvironment{packedenumeral}{
\begin{enumerate}[(1)]
  \setlength{\itemsep}{0pt}
  \setlength{\parskip}{2pt}
  \setlength{\parsep}{0pt}
}{\end{enumerate}}
%%
%%
%% Pack together the items of an itemize.  Remove extraneous
%% vertical spacing between items.
\newenvironment{packeditem}{
\setlength{\parskip}{-5pt}
\begin{itemize}
  \setlength{\itemsep}{0pt}
  \setlength{\parskip}{2pt}
  \setlength{\parsep}{0pt}
}{\end{itemize}}
%%
%%
%% For listing problem sets.  A problem set is placed at the end of
%% each article.
\newcounter{problemcounter}
\newenvironment{problem}{%%
  \setcounter{problemcounter}{1}
  \begin{list}
    {\arabic{problemcounter}.}
    {\usecounter{problemcounter}}
    \let\olditem\item
    \renewcommand{\item}{%%
      \setlength{\itemsep}{-2pt}\olditem
    }
    \setlength{\parskip}{4pt}
    \setlength{\parsep}{0pt}
}{%%
  \end{list}
}
